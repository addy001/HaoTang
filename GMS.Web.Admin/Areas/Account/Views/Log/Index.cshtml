@using GMS.Framework.Contract
@using GMS.Framework.Utility
@using GMS.Framework.Web.Controls
@using GMS.Account.Contract
@using GMS.Core.Log

@model PagedList<AuditLog>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
        th td {
            width: 50px;
            word-break: keep-all; /* 不换行 */
            white-space: nowrap; /* 不换行 */
            overflow: hidden; /* 内容超出宽度时隐藏超出部分的内容 */
            text-overflow: ellipsis; /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
        }
    </style>
}
<div class="row-fluid">
    <div class="span4">
        @*<div>
                <a class="btn red" id="delete" href="javascript:;"><i class="icon-trash icon-white"></i>删除</a>
                <a class="btn blue thickbox" title='添加新项目' href="@Url.Action("Create")?TB_iframe=true&height=400&width=1000"><i class="icon-plus icon-white"></i>新增</a>
            </div>*@
    </div>

    <div class="span8">
        @using (Html.BeginForm(null, null, null, FormMethod.Get, new { id = "search" }))
        {
            <div class="dataTables_filter">
                <label>
                    <button type="submit" class="btn">搜索 <i class="icon-search"></i></button>
                </label>
                <label>
                    <span>用户名：</span>
                    @Html.TextBox("UserName", null, new { @class = "m-wrap small" })
                </label>
            </div>
        }
    </div>
</div>


@using (Html.BeginForm("Delete", "AuditLog", FormMethod.Post, new { id = "mainForm" }))
{
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                @* <th style="width: 8px;">
                        <input type="checkbox" id="checkall" class="group-checkable" />
                    </th>*@

                <th>
                    Username
                </th>
                <th>
                    ModuleName
                </th>


                <th>
                    ModelId
                </th>
                <th>
                    EventType
                </th>
                <th>
                    NewValues
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>



                    <td>
                        @m.UserName
                    </td>
                    <td>
                        @m.ModuleName
                    </td>
                    <td>
                        @m.ModelId
                    </td>

                    <td>
                        @m.EventType
                    </td>
                    <td>
                        @m.NewValues
                    </td>



                    @* <td style="width: 70px">
                            <a class="btn mini purple thickbox" title='编辑分类内容' href="@Url.Action("Edit", new { id = m.ID })?TB_iframe=true&height=400&width=1000">
                                <i class="icon-edit"></i>
                                编辑
                            </a>
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
}
<div class="dataTables_paginate paging_bootstrap pagination">
    @Html.Pager(Model, new PagerOptions() { ShowTotalItemCount = true })
</div>
