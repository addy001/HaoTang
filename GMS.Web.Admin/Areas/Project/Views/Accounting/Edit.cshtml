@using GMS.Framework.Contract
@using GMS.Framework.Web.Controls
@using GMS.Account.Contract
@using GMS.Account.Contract
@using GMS.Project.Contract
@model Accounting
@{
    Layout = "~/Views/Shared/_Layout.Edit.cshtml";
}
@section PageSpecificStyleSheetIncludes{
    <style type="text/css">
    </style>
}
@section PageSpecificJavascriptIncludes{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}
@section MainContent{
    <div class="portlet-body form-horizontal form-bordered form-row-stripped">
        <div class="row-fluid">
            <div class="control-group">
                <label class="control-label">名称：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Name, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Name)</span>
                </div>
            </div>
              <div class="control-group">
                <label class="control-label">编码：</label>
                <div class="controls">
                    @Html.TextBoxFor(m => m.Code, new { @class = "m-wrap small" })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Code)</span>
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">类别：</label>
                <div class="controls">
                    @Html.DropDownList("AccountDep")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.AccountDep)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">科目级别：</label>
                <div class="controls">
                    @Html.DropDownList("Rank")
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Rank)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">描述：</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.Description, new { @class = "m-wrap " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Description)</span>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">备注：</label>
                <div class="controls">
                    @Html.TextAreaFor(m => m.Remark, new { @class = "m-wrap " })
                    <span class="help-inline">@Html.ValidationMessageFor(m => m.Remark)</span>
                </div>
            </div>



        </div>
    </div>
}

